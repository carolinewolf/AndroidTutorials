<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822"
        tools:text="gameResult" />

    <Button
        android:id="@+id/againBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="playAgain"
        android:text="Play again"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTV"
        android:background="@drawable/button_bg"
        app:layout_constraintVertical_bias="0.0" />


    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="353dp"
        android:layout_height="353dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/raster"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/resultTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageView00"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView02"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/circlegreen" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:alpha="0"
            android:onClick="initialGame"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/circlegreen" />

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>